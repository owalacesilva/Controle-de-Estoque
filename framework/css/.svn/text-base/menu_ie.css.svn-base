ul#nivel2 ul {
	position: absolute;
	display: none;
	left: 240px; 
	top: 0;
}


ul#nivel2 li.principal { background: transparent url(../imagens/submenu.png) right center no-repeat; }
li#sub a:hover { background: transparent url(../imagens/submenu.png) right center no-repeat; }
li#nosub a:hover { background: none;}
ul#nivel1 li ul li a { padding: 2px 5px; } 

ul#nivel1 li:hover ul ul,
ul#nivel1 li:hover ul ul ul,
ul#nivel1 li.over ul ul,
ul#nivel1 li.over ul ul ul { display: none; } 

ul#nivel1 li:hover ul,
ul#nivel1 li li:hover ul,
ul#nivel1 li li li:hover ul,
ul#nivel1 li.over ul,
ul#nivel1 li li.over ul,
ul#nivel1 li li li.over ul { display: block; } 

ul#nivel1 li.principal:hover,
ul#nivel1 li.over { background-color: #a4e1ff;color:white; }
ul#nivel1 li a:hover { background-color: #3f6aae;color:white; }

