ul#nivel1 {
	margin: 0;
	padding: 2px;
	width: 150px; 
	background: #ece9d8; 
	font-size: 12px;
}

ul#nivel1 ul { 
	margin: 0;
	padding: 2px;
	background: #ffffff; 
	font-size: 12px;
	width: 250px;
	border: 1px solid #c0c0c0;
	position: absolute;
	display: none;
	left: 1px; 
	top: 24px;
}

ul#nivel1 li {
	position: relative;
	list-style: none;
}

ul#nivel1 li a {
	display: block;
	text-decoration: none;
	color: #222222;
	padding: 5px;
	border-bottom: 0;
}

